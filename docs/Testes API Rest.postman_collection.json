							"                        \"Norte\"\r",
							"                    ]\r",
							"                }\r",
							"            },\r",
							"            \"examples\": [{\r",
							"                \"id\": 1,\r",
							"                \"localDeDestino\": \"Teste\",\r",
							"                \"dataPartida\": \"2025-01-28\",\r",
